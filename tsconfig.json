{
    "extends": "./node_modules/electron-webpack/tsconfig-base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "plugins": [
            { "name": "typescript-tslint-plugin" }
        ],
        "jsx": "react",
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./node_modules"
    ]
}